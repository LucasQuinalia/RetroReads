<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center"
        android:background="@drawable/input_field">

        <ImageView
            android:id="@+id/book_cover"
            android:layout_width="125dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/default_book_cover"/>

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Author"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_star_rate_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/book_star_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Star Rate"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/book_star_rate_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/5.0"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:layout_marginBottom="6dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/book_reading_status"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:background="@drawable/button_default"
            android:text="Reading status"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/delete_button"
                style="@style/CustomButtonStyle"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_background_selector_red"
                android:scaleType="center"
                android:textColor="@color/button_text_selector_red"
                android:src="@drawable/trash"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="SpeakableTextPresentCheck"/>

            <ImageView
                android:id="@+id/edit_button"
                style="@style/CustomButtonStyle"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_selector_gray"
                android:scaleType="center"
                android:textColor="@color/button_text_selector_gray"
                android:textSize="18sp"
                android:src="@drawable/edit"
                tools:ignore="SpeakableTextPresentCheck"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
